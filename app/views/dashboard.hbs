                <p id="location">Location: {{grouplocation}}</p>
                <p id="topic">Topic: {{grouptopic}}</p>

                {{/each}}
            </div>
            <div class="row find-groups">
               <p class="message"><a href="#" onclick="findGroups();"><h3>Find Groups</h3></a></p>
               <div class="row exactmatch">
                   <h3>Groups matching all your preferences</h3>
                   <div>
                       <p>
                           uyuiyi
                       </p>
                   </div>
               </div>
               <div>
                   <h3>Groups matching location</h3>
                   <div>
